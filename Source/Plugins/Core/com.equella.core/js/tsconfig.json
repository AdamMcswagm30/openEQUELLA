{
  "compilerOptions": {
    "outDir": "target/ts",
    "module": "CommonJS",
    "target": "es5",
    "lib": ["es6", "dom"],
    "inlineSourceMap": true,
    "inlineSources": true,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noErrorTruncation": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "paths": {
      "~*": ["./entrybuild/*"]
    }
  },
  "include": ["tsrc/**/*", "__test__/**/*.ts", "__stories__/**/*.tsx"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
